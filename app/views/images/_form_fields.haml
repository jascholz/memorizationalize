.form--fields(image)
  = render 'shared/basic_fields', form: form

  .form--section

    .form--group
      = form.label :gallery_id, class: 'form--label'
      = form.collection_select :gallery_id, current_power.galleries, :id, :name, {}, { class: 'form--select' }

    .form--group
      = form.label :file, class: 'form--label'
      = form.file_field :file, class: 'form--field'

  = render 'shared/submit_fields', form: form
