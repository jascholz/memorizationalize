.content--form
  = form_for @user, html: { class: 'form' } do |f|
    .form--fields
      .form--group
        .headline Registrieren

      .form--group
        = f.label :name, class: 'form--label'
        = f.text_field :name, class: 'form--field'

      .form--group
        = f.label :email, class: 'form--label'
        = f.text_field :email, class: 'form--field'

      .form--group
        = f.label :password, class: 'form--label'
        = f.password_field :password, class: 'form--field'

      .form--group
        = f.label :sign_up_message, class: 'form--label'
        = f.text_area :sign_up_message, class: 'form--field'

      .form--group
        = f.submit 'Submit', class: 'form--button'

      .form--group
        = link_to 'anmelden', new_session_path, class: 'form--link', 'up-target': 'body'
