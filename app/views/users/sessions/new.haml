.content--form
  = form_for @session, url: '/users/sessions', method: :post, html: { class: 'form' } do |f|
    .form--fields
      .form--group
        .headline Anmelden

      .form--group
        = f.label :email, class: 'form--label'
        = f.text_field :email, class: 'form--field'

      .form--group
        = f.label :password, class: 'form--label'
        = f.password_field :password, class: 'form--field'

      .form--group
        = f.submit 'Anmelden', class: 'form--button'

      = link_to 'registrieren', new_user_path, class: 'form--link', 'up-target': 'body'
