%html
  %head
    %title Memorizationalize
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1, shrink-to-fit=no' }
    = favicon_link_tag asset_path('favicon-310.png')

  %body(layout="application")
    .header
      = render 'layouts/header'
      = render 'home/forms'
    .content
      = render 'shared/admin_notifications'
      -#= render 'layouts/flash_message' # TODO
      .content--body
        = yield
    .footer= render 'layouts/footer'
    .no-target
