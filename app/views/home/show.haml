.home(scroll)
  .home-hero(scroll-page)
    .home-hero--background
    .home-hero--tab.-left
      = render 'notes/hero_list'
      = render 'sidebar'
      .home-hero--content
        = image_tag 'minimize.svg', class: 'home-hero--content-toggle', 'hero-content-toggle': ''
        = render 'todos/hero_list'
        = render 'calendars/hero_list'

    .home-hero--tab.-right
      .home-hero--content
        = render 'options'

  - memo_kinds.each do |memo_kind|
    .home-content(scroll-page)
      = render "#{memo_kind.pluralize}/home_index"
